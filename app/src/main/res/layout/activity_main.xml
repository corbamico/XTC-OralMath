<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_plus10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_list"

            android:onClick="launchMain"

            android:textColor="#CCFFFFFF"
            android:textStyle="bold"
            android:text="加法(10以内)" />

        <Button
            android:id="@+id/btn_minus10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_list"

            android:onClick="launchMain"
            android:textColor="#CCFFFFFF"
            android:textStyle="bold"
            android:text="减法(10以内)" />
        <Button
            android:id="@+id/btn_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_list"

            android:onClick="launchMain"
            android:text="加法(20以内)"
            android:textColor="#CCFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_list"
            android:onClick="launchMain"
            android:text="减法(20以内)"

            android:textColor="#CCFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_mul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_list"
            android:onClick="launchMain"
            android:text="乘法"

            android:textColor="#CCFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_list"
            android:onClick="launchMain"
            android:text="除法"

            android:textColor="#CCFFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_list"
            android:onClick="launchConfig"
            android:text="设置"
            android:textColor="#FFFFFF" />



    </LinearLayout>
</ScrollView>