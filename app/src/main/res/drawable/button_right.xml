<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
            <shape >

                <solid android:color="#4d669900" />
                <size android:height="40dp"/>
                <corners android:topLeftRadius="4dp" android:bottomLeftRadius="4dp" android:topRightRadius="20dp" android:bottomRightRadius="20dp" />
                <stroke android:width="1dp" android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item>
            <shape>

                <solid android:color="#ff669900" />
                <size android:height="40dp"/>
                <corners android:topLeftRadius="4dp" android:bottomLeftRadius="4dp" android:topRightRadius="20dp" android:bottomRightRadius="20dp" />
                <stroke android:width="1dp" android:color="@android:color/transparent"/>
            </shape>
    </item>
</selector>


